	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Bolts-Dev/bolt_backend/issues"
	},
	"homepage": "https://github.com/Bolts-Dev/bolt_backend#readme",
	"dependencies": {
		"@types/bcryptjs": "^2.4.2",
		"apollo-server": "^2.21.0",
		"apollo-server-express": "^2.21.0",
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"debug-sx": "^0.2.4",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"graphql": "^15.5.0",
		"husky": "^4.3.7",
		"jsonwebtoken": "^8.5.1",
		"jwt-decode": "^3.1.2",
		"knex": "^0.21.17",
		"morgan": "^1.10.0",
		"objection": "^2.2.14",
		"pg": "^8.5.1",
		"typescript": "^4.1.5",
		"uuid": "^8.3.2"
	},
